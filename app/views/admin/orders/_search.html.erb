<%= search_form_for [:admin, @q], html: { class: "well form-inline form-horizontal" } do |f| %>
  <%= f.hidden_field :type_eq, value: @order_klass %>

  <div class="control-line">
    <div class="control-group-inline">
      <%= f.label :created_at %>
      <%= f.text_field :created_at_gteq, value: @q.created_at_gteq.blank? ? '' : @q.created_at_gteq.to_date, class: "date-input" %> - 
      <%= f.text_field :created_at_lteq, value: @q.created_at_lteq.blank? ? '' : @q.created_at_lteq.to_date, class: "date-input" %>
    </div>
    <div class="control-group-inline">
      <%= f.label :number %>
      <%= f.text_field :number_cont, class: "" %>
    </div>
    <div class="control-group-inline">
      <%= f.label :state %>
      <%= f.select :state_eq, order_state_options(:state) %>
    </div>
  </div>
  
  <hr/>

  <div class="control-line">
    <div class="control-group-inline">
      <%= f.label :mobile %>
      <%= f.text_field :mobile_cont %>
    </div>
    <div class="control-group-inline">
      <%= f.label :payment_state %>
      <%= f.select :payment_state_eq, order_state_options(:payment_state) %>
    </div>
    <div class="control-group-inline">
      <%= f.label :payment_method_id %>
      <%= f.select :payment_method_id_eq, ([[t('all'), '']] + PaymentMethod.available.map { |m| [m.name, m.id] }) %>
    </div>

    <%= f.submit t('helpers.submit.search'), class: 'btn btn-primary' %>
  </div>
<% end %>
