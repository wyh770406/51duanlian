<%= f.simple_fields_for :time_rule do |time_rule_form| %>
  <%= time_rule_form.hidden_field :type %>
  <%= time_rule_form.input :start_time, input_html: { value: time_rule_form.object.start_time.try(:to_s, :time) } %>
  <%= time_rule_form.input :end_time, input_html: { value: time_rule_form.object.end_time.try(:to_s, :time) } %>
  <%= time_rule_form.input :duration %>
<% end %>
