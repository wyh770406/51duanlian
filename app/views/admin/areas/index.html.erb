<% content_for :title do %>
<h1><%= t 'crud.listing', model: Area.model_name.human %></h1>
<div class="toolbar">
  <%= link_to t('crud.new'), new_admin_area_path, class: 'btn btn-primary' %>
</div>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
        <th><%= Area.human_attribute_name(:name) %></th>
        <th><%= Area.human_attribute_name(:city) %></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
<% @areas.each do |area| %>
    <tr>
      <td><%= area.name %></td>
      <td><%= area.city.name %></td>
      <td class="control span4">
        <%= link_to t('crud.edit'), edit_admin_area_path(area) %>
        <%= link_to t('crud.destroy'), admin_area_path(area), confirm: t('crud.destroy_confirmation'), method: :delete %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<%= paginate @areas %>
