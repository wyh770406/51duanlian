<% content_for :title do %>
<h1><%= t 'crud.listing', model: City.model_name.human %></h1>
<div class="toolbar">
  <%= link_to t('crud.new'), new_admin_city_path, class: 'btn btn-primary' %>
</div>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
        <th><%= City.human_attribute_name(:name) %></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
<% @cities.each do |city| %>
    <tr>
      <td><%= city.name %></td>
      <td class="control span4">
        <%= link_to t('crud.edit'), edit_admin_city_path(city) %>
        <%= link_to t('crud.destroy'), admin_city_path(city), confirm: t('crud.destroy_confirmation'), method: :delete %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
