<%= simple_form_for([:admin, @gym], html: { class: 'form-horizontal' }) do |f| %>
  <% if f.error_notification %>
    <div class="alert alert-error fade in">
      <a class="close" data-dismiss="alert">&times;</a>
      <%= f.error_notification %>
    </div>
  <% end %>

  <%= f.association :gym_groups, collection: @gym_groups, include_blank: false %>
  <%= f.input :name, input_html: { class: 'span8' } %>
  <%= f.input :description, input_html: { class: 'span8', rows: 10 } %>
  <%= f.input :phone, input_html: { class: 'span8' } %>
  <%= render resource_view_path(f.object.location, namespace: 'admin', partial: 'form'), { f: f } %>
  <%= f.input :open_at, as: :time, input_html: { class: 'span1' } %>
  <%= f.input :close_at, as: :time, input_html: { class: 'span1' } %>
  <%= f.association :venue_types, as: :check_boxes %>
  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>

<% end %>
