<% content_for :title do %>
<h1><%= t 'crud.listing', model: CardCharge.model_name.human %></h1>
<div class="toolbar">
  <%= link_to t('crud.new'), new_admin_card_charge_path, class: 'btn btn-primary' %>
</div>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
        <th><%= CardCharge.human_attribute_name(:name) %></th>
        <th><%= CardCharge.human_attribute_name(:price) %></th>
        <th></th>
    </tr>
  </thead>
  <tbody>
<% @card_charges.each do |card_charge| %>
    <tr>
      <td><%= card_charge.name %></td>
      <td><%= number_to_currency card_charge.price %></td>
      <td class="control span4">
        <%= link_to t('crud.show'), admin_card_charge_path(card_charge) %>
        <%= link_to t('crud.edit'), edit_admin_card_charge_path(card_charge) %>
        <%= link_to t('crud.destroy'), admin_card_charge_path(card_charge), confirm: t('crud.destroy_confirmation'), method: :delete %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
