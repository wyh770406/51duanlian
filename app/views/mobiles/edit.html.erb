<%= render '/shared/user_tabs' %>

<h1><%= t('verify_mobile') %></h1>

<%= form_tag(mobile_path, method: :put, class: 'form-horizontal') do %>

  <div class="control-group">
    <label class="control-label" for="code"><%= @mobile %></label>
    <div class="controls">
      <div class="input-prepend input-append">
        <span class="add-on"><%= t('mobile_verification_code') %></span><input name="code" id="code" size="6" type="text"><%= link_to t('resend_mobile_verification_code'), send_verification_code_mobile_path, method: :post, class: 'btn' %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= submit_tag t('verify_mobile'), class: 'btn' %>
  </div>
<% end %>
