<h2><%= t('forgot_password_title') %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :email, :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('reset_password'), class: 'btn btn-large btn-primary' %>
  </div>
<% end %>

<%= render "links" %>